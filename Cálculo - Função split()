cod_peca_1, n_pecas_1, valor_pecas_1 = input().split(" ")
cod_peca_1 = int(cod_peca_1)
n_pecas_1 = int(n_pecas_1)
valor_pecas_1 = float(valor_pecas_1)

cod_peca_2, n_pecas_2, valor_pecas_2 = input().split(" ")
cod_peca_2 = int(cod_peca_2)
n_pecas_2 = int(n_pecas_2)
valor_pecas_2 = float(valor_pecas_2)

valor_a_pagar = (n_pecas_1 * valor_pecas_1) + (n_pecas_2 * valor_pecas_2)
print("VALOR A PAGAR: R$ {:.2f}".format(valor_a_pagar))
